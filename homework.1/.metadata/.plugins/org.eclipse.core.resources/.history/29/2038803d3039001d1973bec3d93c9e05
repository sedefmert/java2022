package arrays;

public class Main {

	public static void main(String[] args) {
		// diziler
		
		String ogrenci1 = "Engin";
		String ogrenci2 = "Derin";
		String ogrenci3 =  "Sedef";
		String ogrenci4 = "Hüseyin";
		
		System.out.println(ogrenci1);
		System.out.println(ogrenci2);
		System.out.println(ogrenci3);
		System.out.println(ogrenci4);
		
		System.out.println("------------------------");
		
		String[] ogrenciler = new String[4]; //kaç elemanlı bir dizi olduğu tanımlanır.
		ogrenciler[0] = "Engin";
		ogrenciler[1] = "Derin";
		ogrenciler[2] = "Sedef";
		ogrenciler[3] = "Hüseyin";
		
		
		for(int i=0;i<ogrenciler.length;i++) {
			System.out.println(ogrenciler[i]);
		}
		
		System.out.println("------------------------");
		
		for(String ogrenci:ogrenciler) {  //tercih edilen yöntem budur.
			System.out.println(ogrenci);
		}
	}

}
